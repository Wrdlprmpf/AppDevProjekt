<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.list.DetailFragment"
    android:padding="24dp">

    <TextView
        android:id="@+id/name_detail"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/name"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_detail_txt"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:text="@string/name"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/name_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/top_speed_detail_txt"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:text="@string/top_speed"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/top_speed_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/average_speed_detail_txt"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:text="@string/average_speed"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/average_speed_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/average_speed_detail"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/average_speed"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_detail" />

    <TextView
        android:id="@+id/top_speed_detail"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/top_speed"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/average_speed_detail" />


</androidx.constraintlayout.widget.ConstraintLayout>